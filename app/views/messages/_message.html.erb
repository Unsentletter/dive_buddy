<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag(message.profile.photo_url(:thumb), :width =>100, :height => 100)%>
      </div>
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted"><%= message.profile.name %> at <%= message.timestamp %>says</span><br>
          <%= message.body %>
        </p>
      </div>
    </div>
  </div>
</div>
