<p id="notice"><%= notice %></p>

<h1>Location Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Location</th>
      <th>Review</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_reviews.each do |location_review| %>
      <tr>
        <td><%= location_review.profile %></td>
        <td><%= location_review.location %></td>
        <td><%= location_review.review %></td>
        <td><%= location_review.rating %></td>
        <td><%= link_to 'Show', location_review %></td>
        <td><%= link_to 'Edit', edit_location_review_path(location_review) %></td>
        <td><%= link_to 'Destroy', location_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location Review', new_location_review_path %>
