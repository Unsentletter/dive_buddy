<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Location name</th>
      <th>Description</th>
      <th>Depth</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.location_name, location %></td>
        <td><%= location.description %></td>
        <td><%= location.depth %></td>
        <td><%= location.difficulty %></td>
        <td>
          <% if can? :update, @location %>
          <%= link_to "Edit", edit_location_path(location.id) %>
          <% end %>
        </td>
        <td>
          <% if can? :update, @location %>
          <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
