<p id="notice"><%= notice %></p>

<h1>Diver Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Diver review</th>
      <th>Diver rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diver_reviews.each do |diver_review| %>
      <tr>
        <td><%= diver_review.profile %></td>
        <td><%= diver_review.diver_review %></td>
        <td><%= diver_review.diver_rating %></td>
        <td><%= link_to 'Show', diver_review %></td>
        <td><%= link_to 'Edit', edit_diver_review_path(diver_review) %></td>
        <td><%= link_to 'Destroy', diver_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diver Review', new_diver_review_path %>
